.reviews
  padding: 40px 0 70px 0
  &__title
    font-style: normal
    font-weight: 700
    font-size: 36px
    line-height: 45px
    text-align: center
    text-transform: uppercase
    margin-bottom: 70px
  &-slider
    &__item
      position: relative
      background-color: $light
      border-radius: 8px
      display: flex
      flex-direction: column
      align-items: center
      max-width: 730px
      margin: 45px auto 0
      margin-top: 45px
      padding: 0 62px 30px
      &:before
        content: ''
        background-image: url(../img/quote-left.svg)
        width: 70px
        height: 47px
        left: 62px
        top: 13px
        background-repeat: no-repeat
        position: absolute
      &:after
        content: ''
        background-image: url(../img/quote-right.svg)
        width: 70px
        height: 47px
        right: 62px
        top: 118px
        background-repeat: no-repeat
        position: absolute
    &__button
      position: absolute
      top: 50%
      transform: translateY(-50%)
      width: 30px
      height: 30px
      background-repeat: no-repeat
      background-size: 10px
      background-position: center
      border: none
      background-color: transparent
      outline: none
      cursor: pointer
      z-index: 99
      &--prev
        background-image: url(../img/arrow-prev-secondary.svg)
        left: 0
      &--next
        background-image: url(../img/arrow-next-secondary.svg)
        right: 0
    &__profile
      display: flex
      flex-direction: column
      align-items: center
      margin-top: -45px
      margin-bottom: 30px
    &__avatar
      width: 90px
      height: 90px
      border-radius: 50%
      object-fit: cover
      margin-bottom: 9px
    &__username
      font-style: normal
      font-weight: bold
      font-size: 12px
      line-height: 15px
      color: $primary
      margin-bottom: 10px
    &__date
      font-style: normal
      font-weight: 400
      font-size: 10px
      line-height: 13px
      margin-bottom: 4px
    &__rating
      display: flex
      align-items: center
    &__text
      font-style: normal
      font-weight: 400
      font-size: 12px
      line-height: 19px
      text-align: justify
      margin: auto
      max-width: 537px
